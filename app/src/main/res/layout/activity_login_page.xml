<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_Gray"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="314dp"
        android:layout_height="413dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="475dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_with_motto" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="653dp"
        android:layout_height="667dp"
        android:layout_marginTop="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        app:srcCompat="@drawable/loginbg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="408dp"
        android:layout_height="917dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="493dp"
            android:layout_marginEnd="289dp"
            android:layout_marginBottom="384dp"
            android:text="Email"
            android:textColor="@color/design_default_color_background"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="142dp"
            android:layout_height="41dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="608dp"
            android:layout_marginEnd="237dp"
            android:layout_marginBottom="268dp"
            android:text="Password"
            android:textColor="@color/design_default_color_background"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="352dp"
            android:layout_height="48dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="546dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="323dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="352dp"
            android:layout_height="48dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="669dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="752dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="108dp"
            android:backgroundTint="@color/Warm_Orange"
            android:text="Log In"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="206dp"
            android:layout_height="25dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="826dp"
            android:layout_marginEnd="129dp"
            android:layout_marginBottom="66dp"
            android:text="If Not Registered, "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/register"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:layout_marginStart="245dp"
            android:layout_marginTop="824dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="66dp"
            android:text="Register"
            android:textColor="@color/Light_Gray"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>